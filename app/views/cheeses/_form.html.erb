<%= form_with(model: cheese, local: true) do |form| %>
  <% if cheese.errors.any? %>
    <%= render 'shared/form_errors', object: cheese %>
  <% end %>

  <%= form.label :name %>
  <%= form.text_field :name %>
  <br/><br/>

  <%= form.label :image %>
  <%= form.file_field :image %>
  <br/><br/>

  <%= form.label :region %>
  <%= form.collection_select :region, Region.all, :name, :name %>
  <br/><br/>

  <%= form.label :texture %>
  <%= form.collection_select :texture, Texture.all, :name, :name %>
  <br/><br/>

  <%= form.label :milk %>
  <%= form.collection_select :milk, Milk.all, :name, :name %>
  <br/><br/>

  <%= form.label :wine_pairing %>
  <%= form.collection_select :wine_pairing, Wine.all, :name, :name %>
  <br/><br/>

  <%= form.label :strength %>
  <%= form.collection_select :strength, Strength.all, :name, :name %>
  <br/><br/>

  <%= form.label :description %>
  <%= form.text_area :description %>
  <br/><br/>

  <%= form.label :supplier %>
  <%= form.collection_select :supplier_id, Supplier.all, :id, :name %>
  <br/><br/>

  <%= form.label :cost %>
  <%= form.text_field :cost %>
  <br/><br/>

  <%= form.label :price %>
  <%= form.text_field :price %>
  <br/><br/>

  <%= form.submit %>
  <br/><br/>
<% end %>
