<% if @cheese.image %>
  <%= image_tag @cheese.image %>
<% end %>
Name: <%= @cheese.name %><br/>
Region: <%= @cheese.region %><br/>
Texture: <%= @cheese.texture %><br/>
Milk: <%= @cheese.milk %><br/>
