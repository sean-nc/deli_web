<%= form_for(object) do |form| %>
  <% if object.errors.any? %>
    <%= render 'shared/form_errors', object: object %>
  <% end %>

  <%= form.label :current_units %>
  <%= form.number_field :current_units %>
  <br/><br/>

  <%= form.label :ordered_units %>
  <%= form.number_field :ordered_units %>
  <br/><br/>

  <%= form.submit %>
  <br/><br/>
<% end %>
