<%= link_to 'Add Supplier', new_supplier_path, class: "uk-button uk-button-primary uk-width-1-1 uk-margin-small-bottom uk-align-center" %>

<% @suppliers.each do |supplier| %>
  <div class='supplier'>
    <b><%= supplier.name %></b>: <%= supplier.company_name %>
    <div><%= link_to "Show", supplier %><%= link_to "Edit", edit_supplier_path(supplier) %></div>
  </div>
<% end %>